<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumeneraMate.Apps.Xamarin.Views.DevicesPages.CyphersPage"
             xmlns:vm="clr-namespace:NumeneraMate.Apps.Xamarin.ViewModels.DevicesViewModels"
            Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:CyphersViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor x:Name="editor"
                Placeholder="Nothing"
                IsReadOnly="True"
                Text="{Binding Description}"
                    HeightRequest="300"/>

            <Button Grid.Column="0"
                    Text="Generate Random"
                    BackgroundColor="#dfdfe0"
                    Command="{Binding GenerateRandomDevice}" Visual="Material" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>