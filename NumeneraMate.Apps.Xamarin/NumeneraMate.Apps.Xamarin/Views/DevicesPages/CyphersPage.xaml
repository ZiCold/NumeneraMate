<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumeneraMate.Apps.Xamarin.Views.DevicesPages.CyphersPage"
             xmlns:vm="clr-namespace:NumeneraMate.Apps.Xamarin.ViewModels.DevicesViewModels"
            Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:CyphersViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0" Padding="10">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Name:" FontAttributes="Bold"/>
                        <Label Text="{Binding Cypher.Name}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Level:" FontAttributes="Bold"/>
                        <Label Text="{Binding Cypher.CurrentLevel}"/>
                    </StackLayout>

                    <Label Text="Appearance:" FontAttributes="Bold"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Wearable:"/>
                        <Label Text="{Binding Cypher.Wearable}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Usable:"/>
                        <Label Text="{Binding Cypher.Usable}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Internal:"/>
                        <Label Text="{Binding Cypher.Internal}"/>
                    </StackLayout>

                    <Label Text="Effect:" FontAttributes="Bold"/>
                    <Label Text="{Binding Cypher.Effect}"/>

                    <Label Text="RollTable:" FontAttributes="Bold"/>
                    <Label Text="{Binding Cypher.RollTable}"/>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Source:" FontAttributes="Bold"/>
                        <Label Text="{Binding Cypher.Source}"/>
                    </StackLayout>

                </StackLayout>
            </ScrollView>
            <Button Grid.Row="1"
                        Text="Generate Random"
                        Command="{Binding GenerateRandomDevice}" Visual="Material" 
                        IsEnabled="{Binding IsGenerateButtonEnabled}"
                        />

        </Grid>
    </ContentPage.Content>
</ContentPage>